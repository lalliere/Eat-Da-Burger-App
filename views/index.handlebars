<h1 class="center-align">Eat-Da-Burger</h1>


<h2>Mouth-Watering Burgers Waiting to be Devoured:</h2>

<div class="container">
  <div class="row">
    <div class="col m6">
      <div class="carousel">
        <a class="carousel-item">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block eaten=false}}
            {{/unless}}
            {{/each}}
          </ul>
        </a>
      </div>
    </div>
  </div>
</div>

