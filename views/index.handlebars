<main>
  <br>
  <div class="container">
    <div class="row">
      <div class="col s12 m5 l5 valign left-align uneaten-burger-list">
        <div class="card">
          <div class="card-stacked">
            <div class="card-content">
              <p class="card-title center-align" style="color: rgb(214, 137, 48)"><b>Burgers Waiting to be Devoured:</b>
              </p>
              <hr>
              <p>
                <ul>
                  {{#each burger}}
                  {{#unless eaten}}
                  {{> burgers/burgers-block}}
                  {{/unless}}
                  {{/each}}
                </ul>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12 m2 l2 valign"></div>
      <div class="col s12 m5 l5 valign left-align eaten-burger-list">
        <div class="card">
          <div class="card-stacked">
            <div class="card-content">
              <p class="card-title center-align" style="color: rgb(214, 137, 48)"><b>Burger Battles Won!:</b></p>
              <hr>
              <p>
                <ul>
                  {{#each burger}}
                  {{#if eaten}}
                  {{> burgers/burgers-block}}
                  {{/if}}
                  {{/each}}
                </ul>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container createBurger">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card horizontal">
          
          <div class="card-stacked">
            <div class="card-content">
              <div class="row">
                <div class="col s12 m12 l12">
                  <div>
                    <h4 class="cr-brg-h4">Create a Burger to be Devoured:</h4>
                  </div>
                </div>
              </div>
              <div clas="row">
                <div class="col s12 m12 l12">
                  <form class="create-form">
                    <div class="form-group">
                      <input type="text" id="burger" name="name" placeholder="Ex. Buffalo Chicken with Ranch & Lettuce">
                    </div>

                    <button class="waves-effect waves-light btn-small addBtn green darken-3" type="submit">Add Burger</button>

                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>

  </div>
</main>