<main>
  <br>
  <div class="container">
    <div class="row">
      <div class="col s12 m6 l6 valign left-align">
        <div class="card horizontal">
          <div class="card-stacked">
            <div class="card-content">
              <p class="card-title center-align" style="color: rgb(214, 137, 48)"><b>Burgers Waiting to be Devoured:</b>
              </p>
              <hr>
              <p>
                <ul>
                  {{#each burgers}}
                  {{#unless eaten}}
                  {{> burgers/burger-block}}
                  {{/unless}}
                  {{/each}}
                </ul>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12 m6 l6 valign left-align">
        <div class="card horizontal">
          <div class="card-stacked">
            <div class="card-content">
              <p class="card-title center-align" style="color: rgb(214, 137, 48)"><b>Burger Battles Won!:</b></p>
              <hr>
              <p>
                <ul>
                  {{#each burgers}}
                  {{#if eaten}}
                  {{> burgers/burger-block}}
                  {{/if}}
                  {{/each}}
                </ul>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col s12">
        <div>
          <h4 class="left" style="color: #2e7d32">Create a Burger to be Devoured:</h4>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col s12">

        <form class="create-form">
          <div class="form-group">
            <label for="burgName">Burger Name:</label>
            <input type="text" id="burgName" name="name" placeholder="Ex. Buffalo Chicken with Ranch & Lettuce">
          </div>

          <button class="waves-effect waves-light btn-small addBtn green darken-3" type="submit">Add Burger</button>

        </form>

      </div>

    </div>

  </div>
</main>