<h2>Burger Battles Won:</h2>

<div class="container">
  <div class="row">
    <div class="col m6">
      <div class="carousel">
        <a class="carousel-item">
          <ul>
            {{#each burgers}}
              {{#if eaten}}
                {{> burgers/burger-block eaten=true}}
              {{/if}}
            {{/each}}
          </ul>
        </a>
      </div>
    </div>
  </div>
</div>



<h2>Add a Burger to be Devoured:</h2>

<form class="create-form">
  <div class="form-group">
    <label for="burgName">Burger Name:</label>
    <input type="text" id="burgName" name="burger_name">
  </div>

  <div class="form-group">
    <label for="status">Current Status:</label><br>
    <input type="radio" name="status" value="1" /> Devoured!<br>
    <input type="radio" name="status" value="0" /> Ready to Eat!
  </div>

  <button type="submit">Add Burger</button>
</form>
